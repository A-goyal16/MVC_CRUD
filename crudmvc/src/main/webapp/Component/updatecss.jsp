body {
        font-family: sans-serif;
        margin: 0;
        padding: 0;
        background-image: url("https://png.pngtree.com/background/20210711/original/pngtree-blue-university-student-s-day-background-picture-image_1146051.jpg");
        background-size: cover;
    }
    form {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        border-radius: 5px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        outline-color: black;
    }
    form input[type="text"],
    form input[type="number"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }
    form input[type="radio"] {
        margin-bottom: 10px;
    }
    form label {
        display: block;
        margin-bottom: 5px;
    }
    form button {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        color: black;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
    form button:hover {
        background-color: black;
        color: white;
    }
    .link {
        text-align: right;
        margin-top: 10px;
    }